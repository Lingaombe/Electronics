const int sensorPin = 7;  // IR sensor output pin connected to digital pin 7

const int ledPin = 13;    // LED connected to digital pin 13

void setup() {

   pinMode(sensorPin, INPUT);  // Set sensor pin as input

   pinMode(ledPin, OUTPUT);    // Set LED pin as output

}

void loop() {

   int sensorValue = digitalRead(sensorPin);  // Read the sensor value

   if (sensorValue == LOW) {  // Object detected

       digitalWrite(ledPin, HIGH);  // Turn ON LED

   } else {

       digitalWrite(ledPin, LOW);   // Turn OFF LED

   }

}

Program 2 : for Serial monitor:

const int sensorPin = 7;  // IR sensor output pin connected to digital pin 7

 

void setup() {

   pinMode(sensorPin, INPUT);  // Set sensor pin as input

   Serial.begin(9600);  // Initialize serial communication

}

 

void loop() {

   int sensorValue = digitalRead(sensorPin);  // Read the sensor value

   if (sensorValue == LOW) {

       Serial.println("Object Detected");  // Print message in Serial Monitor

   } else {

       Serial.println("No Object");

   }

   delay(500);  // Small delay for stability

}

